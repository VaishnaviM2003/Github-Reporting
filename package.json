{
  "name": "ascendion-playwright",
  "version": "1.0.0",
  "description": "Multi-project Playwright automation framework",
  "scripts": {
    "test": "playwright test",
    "ci": "playwright test",
    "test:headed": "playwright test --headed",
    "test:ui": "playwright test --ui",
    "report:open": "playwright show-report",
    "allure:generate": "allure generate ./allure-results --clean -o ./allure-report",
    "allure:open": "allure open ./allure-report",
    "clean": "rimraf playwright-report test-results allure-results allure-report"
  },
  "devDependencies": {
    "@playwright/test": "^1.46.0",
    "allure-playwright": "^2.14.0",
    "allure-commandline": "^2.29.0",
    "rimraf": "^6.0.1"
  }
}
