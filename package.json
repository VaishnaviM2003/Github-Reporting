{
  "name": "ascendion-playwright",
  "version": "1.0.0",
  "description": "Multi-project Playwright automation framework",
  "scripts": {
    "test": "npx playwright test",
    "test:old": "npx playwright test --project=oldProject",
    "test:sauce": "npx playwright test --project=saucedemoProject",
    "test:headed": "npx playwright test --headed",
    "report": "npx playwright show-report",
    "allure:generate": "allure generate ./allure-results --clean -o ./allure-report",
    "allure:open": "allure open ./allure-report"
  },
  "devDependencies": {
    "@playwright/test": "^1.46.0",
    "allure-playwright": "^2.0.0-beta.27"
  }
}
